<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/ciel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Galaxy Mad"
        android:id="@+id/tV1"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenue dans l'application Galaxy Mad !
        \n Cliquez sur le bouton S'abonner pour suivre par mail l'actualité de Galaxy Mad.
        \n Cliquez sur le bouton Articles pour lire nos articles publiés.
        \n Cliquez sur le bouton Site pour découvrir notre association."
        android:id="@+id/tV2"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tV1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'abonner"
        android:id="@+id/btn_connexion"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tV1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Articles"
        android:id="@+id/btn_navigation"
        android:layout_alignBottom="@+id/btn_connexion"
        android:layout_centerHorizontal="true" />


    <com.shamanland.facebook.likebutton.FacebookLikePlugin
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view">
    <com.shamanland.facebook.likebutton.FacebookLikeButton
        style="@style/Widget.FacebookLikeButton"
        app:pageUrl="https://www.facebook.com/GalaxyMad"
        app:pageTitle="Galaxy Mad"
        app:pageText="Innovation et développement culturel par le web "
        app:pagePictureUrl="@drawable/icone"
        />
        <com.shamanland.facebook.likebutton.FacebookLikeBox
            style="@style/Widget.FacebookLikeBox"
            app:calloutMarker="left"
            />
    </com.shamanland.facebook.likebutton.FacebookLikePlugin>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site"
        android:id="@+id/btn_navigation2"
        android:layout_alignTop="@+id/btn_connexion"
        android:layout_toStartOf="@+id/tV1" />


</RelativeLayout>
